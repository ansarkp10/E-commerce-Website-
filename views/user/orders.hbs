<section>
    <div class="container">
        {{#if orders.length}}
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Payment</th>
                        <th>Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr class="{{#if @last}}highlight{{/if}}">
                        <td data-label="Date">{{this.date}}</td>
                        <td data-label="Address">{{this.deliveryDetails.address}}</td>
                        <td data-label="Pincode">{{this.deliveryDetails.pincode}}</td>
                        <td data-label="Mobile">{{this.deliveryDetails.mobile}}</td>
                        <td data-label="Amount">{{this.totalAmount}}</td>
                        <td data-label="Payment">{{this.paymentMethod}}</td>
                        <td data-label="Status">{{this.status}}</td>
                        <td data-label="Actions">
                            <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="no-orders mt-5">
                <h2>No Orders Found</h2>
                <p>It seems you have not placed any orders yet. Start shopping now!</p>
                <a href="/" class="btn btn-primary">Browse Products</a>
            </div>
        {{/if}}
    </div>
</section>


<style>
    /* Container styling */
    .container {
        margin: 20px auto;
        padding: 20px;
        max-width: 1200px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Table styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table th, .table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        transition: background-color 0.3s ease;
    }

    .table thead {
        background-color: #343a40;
        color: #fff;
    }

    .table thead th {
        font-weight: bold;
        text-transform: uppercase;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .table td a {
        color: #fff;
        background-color: #007bff;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .table td a:hover {
        background-color: #0056b3;
    }

    .table td {
        color: #333;
    }

    /* Highlight the last row */
    .highlight {
        background-color: #d4edda; /* Light green background for highlight */
        font-weight: bold; /* Make the text bold */
    }

    /* Add responsiveness */
    @media screen and (max-width: 768px) {
        .table, .table thead, .table tbody, .table th, .table td, .table tr {
            display: block;
        }

        .table thead tr {
            position: absolute;
            top: -9999px;
            left: -9999px;
        }

        .table tr {
            margin: 0 0 1rem 0;
        }

        .table td {
            padding: 10px;
            position: relative;
            padding-left: 50%;
            text-align: right;
        }

        .table td:before {
            content: attr(data-label);
            position: absolute;
            left: 10px;
            width: 45%;
            padding-right: 10px;
            white-space: nowrap;
            text-align: left;
            font-weight: bold;
        }

        .table td a {
            display: inline-block;
            margin-top: 5px;
        }
    }
    .no-orders {
    text-align: center; /* Center the text */
    padding: 50px 20px; /* Spacing around the message */
    background-color: #f8f9fa; /* Light background for visibility */
    border-radius: 8px; /* Rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    margin-top: 20px; /* Spacing above the no orders message */
}

.no-orders h2 {
    font-size: 24px; /* Larger font for the heading */
    color: #388E3C; /* Green color for the heading */
}

.no-orders p {
    font-size: 16px; /* Font size for the message */
    color: #555; /* Darker text color for contrast */
}

.no-orders a {
    margin-top: 20px; /* Spacing above the button */
}

</style>
